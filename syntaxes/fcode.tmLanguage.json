{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "fabrica.ai fcode",
	"patterns": [
		{
			"name": "entity.name.function.fcode",
			"match": "\\b(gc|gr|lc|lr)\\b"
		},
		{
			"name": "entity.name.tag.fcode",
			"match": "\\b(sc|sr)\\b"
		},
		{
			"name": "keyword.control.fcode",
			"match": "\\b(delay|wait|ack)\\b"
		},
		{
			"name":"constant.language.fcode",
			"match": "\\b(home|disable)\\b"
		},
		{
			"name":"constant.numeric.fcode",
			"match": "[+-]?([0-9]*[.])?[0-9]+"
		},
		{
			"name": "comment", 
			"begin": "#",
			"end": "\n"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"strings": {
			"name": "string.quoted.double.fcode",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.fcode",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.fcode"
}