{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "fabrica.ai fcode",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.fcode",
				"match": "\\b(gc|gr|sc|sr|lc|lr)\\b"
			}]
		},
		"gantry": {
			"patterns": [{
				"name": "keyword.control.fcode",
				"match": "\\b(gc|gr)\\b"
			}]
		},
		"servos": {
			"patterns": [{
				"name": "servo.control.fcode",
				"match": "\\b(sc|sr)\\b"
			}]
		},
		"led": {
			"patterns": [{
				"name": "led.control.fcode",
				"match": "\\b(lc|lr)\\b"
			}]
		},
		"others": {
			"patterns": [{
				"name": "other.control.fcode",
				"match": "\\b(wait|delay)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.fcode",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.fcode",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"name": "comment", 
			"begin": "#",
			"end": "\n"
		}
	},
	"scopeName": "source.fcode"
}